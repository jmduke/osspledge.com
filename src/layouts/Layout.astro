<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <link rel="icon" type="image/png" href="/favicon.png">

    <title>{ title ? (title + " | Open Source Pledge") : "Open Source Pledge" }</title>
    <meta name="description" content="Our companies feast year after year at the Open Source table. It's time to settle up.">
    <meta property="og:url" content="https://opensourcepledge.com">
    <meta property="og:type" content="website">
    <meta property="og:title" content={ title ? (title + " | Open Source Pledge") : "Open Source Pledge" }>
    <meta property="og:description" content="Our companies feast year after year at the Open Source table. It's time to settle up.">
    <meta property="og:image" content="https://opensourcepledge.com/logos/opensourcepledge-logo-horiz-color-opengraph.png">

    <script
      is:inline
      defer
      data-domain="opensourcepledge.com"
      src="https://plausible.io/js/script.js"></script>
  </head>
  <body>
    <a class="skiplink" href="#main-content">Skip to main content</a>
    { !navless && (
      <nav class="container">
        <a href="/">
          <img src="/logos/opensourcepledge-logo-horiz-color.png" alt="The Open Source Pledge logo">
        </a>
        <ul>
          <li>
            <a class="sneaky" href="/join">Join</a>
          </li>
          <li>
            <a class="sneaky" href="/about">About</a>
          </li>
          <li>
            <a class="sneaky" href="/members">Members</a>
          </li>
        </ul>
      </nav>
    ) }
    <slot></slot>
    <footer class="container">
      <span><a class="sneaky" href="/join">Join</a></span>
      <span><a class="sneaky" href="/about">About</a></span>
      <span><a class="sneaky" href="/members">Members</a></span>
    </footer>
  </body>
</html>

